<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <EditText
            android:id="@+id/editNome"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:hint="Digite seu nome: " />

        <EditText
            android:id="@+id/editEmail"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:hint="E-mail:"
            android:inputType="textEmailAddress" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gênero literário preferido:" />

        <Spinner
            android:id="@+id/spinnerGenero"
            android:layout_width="match_parent"
            android:layout_height="46dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Faixa etária:" />

        <RadioGroup
            android:id="@+id/radioGroupFaixaEtaria"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/radioMenor18"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Menor de 18" />

            <RadioButton
                android:id="@+id/radio18a25"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="18–25" />

            <RadioButton
                android:id="@+id/radioAcima25"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Acima de 25" />
        </RadioGroup>

        <CheckBox
            android:id="@+id/checkNotificacoes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Desejo receber notificações" />

        <Button
            android:id="@+id/btnCadastrar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/black"
            android:text="Cadastrar"
            android:textColorLink="#FD0000"
            app:cornerRadius="20px" />
    </LinearLayout>
</ScrollView>
